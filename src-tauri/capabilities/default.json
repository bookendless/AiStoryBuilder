{
  "identifier": "default",
  "description": "Default capabilities for AI Story Builder",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://localhost:*" },
        { "url": "http://127.0.0.1:*" },
        { "url": "https://api.openai.com" },
        { "url": "https://api.anthropic.com" },
        { "url": "https://generativelanguage.googleapis.com" }
      ],
      "deny": []
    },
    "dialog:default",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" }
      ],
      "deny": []
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" }
      ],
      "deny": []
    },
    "store:default"
  ]
}
