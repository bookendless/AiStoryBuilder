{
  "version": 2,
  "name": "ai-story-builder",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_APP_NAME": "AI Story Builder",
    "VITE_APP_VERSION": "1.0.0",
    "VITE_APP_DESCRIPTION": "AIを活用した小説創作支援アプリ",
    "VITE_DEBUG_MODE": "false",
    "VITE_LOG_LEVEL": "info",
    "VITE_ENABLE_API_KEY_ENCRYPTION": "true",
    "VITE_MAX_PROMPT_LENGTH": "10000"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
